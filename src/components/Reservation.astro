<div id="reservation">
    <div class="flex justify-center items-center h-screen">
        <div class="grid grid-cols-2 gap-4 h-max my-10 text-center">

            <div class="my-20 text-xl bg-black">

                <form action="" method="POST" class="form-left">

                    <h2 class="text-6xl text-center  tracking-wider">Online Reservation</h2>

                    <p class="my-4 text-orange-200">
                        Booking request <a href="tel:+88123123456" class="link text-orange-400">+88-123-123456</a>
                        or fill out the order form
                    </p>

                    <div class="grid grid-cols-2 md:grid-cols-2 gap-4 mb-5">
                        <input class="input input-bordered input-primary w-full max-w-xs bg-transparent" type="text" name="name" placeholder="Your Name *" autocomplete="on" required>
                        <input class="input input-bordered input-primary w-full max-w-xs bg-transparent" type="tel" name="phone" placeholder="Phone Number *" autocomplete="on" pattern="[0-9]*" title="Please enter only numeric characters" required>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-5">
                        <div class="relative">
                            <select class="input input-bordered input-primary w-full max-w-xs bg-transparent" name="person" required>
                                <option value="1-person">1 Person</option>
                                <option value="2-person">2 Person</option>
                                <option value="3-person">3 Person</option>
                                <option value="4-person">4 Person</option>
                                <option value="5-person">5 Person</option>
                                <option value="6-person">6 Person</option>
                                <option value="7-person">7 Person</option>
                            </select>
                            <ion-icon name="person-outline" class="absolute right-3 top-1/2 transform -translate-y-1/2" aria-hidden="true"></ion-icon>
                        </div>

                        <div class="relative">
                            <input  class="input input-bordered input-primary w-full max-w-xs bg-transparent"type="date" name="reservation-date" required>
                            <ion-icon name="calendar-clear-outline" class="absolute right-3 top-1/2 transform -translate-y-1/2" aria-hidden="true"></ion-icon>
                        </div>

                        <div class="relative">
                            <select class="input input-bordered input-primary w-full max-w-xs bg-transparent" name="time" required>
                                <option value="08:00am">08 : 00</option>
                                <option value="09:00am">09 : 00</option>
                                <option value="010:00am">10 : 00</option>
                                <option value="011:00am">11 : 00</option>
                                <option value="012:00am">12 : 00</option>
                                <option value="01:00pm">13 : 00</option>
                                <option value="02:00pm">14 : 00</option>
                                <option value="03:00pm">15 : 00</option>
                                <option value="04:00pm">16 : 00</option>
                                <option value="05:00pm">17 : 00</option>
                                <option value="06:00pm">18 : 00</option>
                                <option value="07:00pm">19 : 00</option>
                                <option value="08:00pm">20 : 00</option>
                                <option value="09:00pm">21 : 00</option>
                                <option value="10:00pm">22 : 00</option>
                            </select>
                            <ion-icon name="time-outline" class="absolute right-3 top-1/2 transform -translate-y-1/2" aria-hidden="true"></ion-icon>
                        </div>
                    </div>

                    <div>
                        <input class="input input-bordered flex justify-center input-primary w-full max-w-xs bg-transparent mb-5" type="email" name="email" placeholder="Email * " autocomplete="on" required>
                    </div>

                    <textarea class="input input-bordered flex justify-start input-primary w-full max-w-xs bg-transparent h-20 mb-5" name="message" placeholder="Message .  .  . " autocomplete="off"></textarea>

                    <button type="submit" class="btn btn-primary">
                        <span class="text-2xl  w-60">Book A Table</span>
                    </button>

                </form>

            </div>

            <div class=" text-center text-xl space-y-3 mx-20 mb-20">
                <img src="/images/footer-form-pattern.png" class="absolute flex items-center justify-center w-96">
                <div class="relative z-10 mt-20">
                    <h2 class="text-5xl mt-20 mb-6 text-center tracking-wide">Contact Us</h2>
                    <p class="text-orange-200">Booking Request</p>
                    <a href="tel:+88123123456" class="hover:underline">+88-123-123456</a>
                    <p class="text-orange-200">Location</p>
                    <address>
                        Gothaer Str. 2, 99885 Ohrdruf
                    </address>

                    <p class="text-orange-200">Lunch Time</p>

                    <p>
                        Monday to Sunday <br>
                        11.00 am - 2.30pm
                    </p>

                    <p class="text-orange-200">Dinner Time</p>

                    <p>
                        Monday to Sunday <br>
                        05.00 pm - 10.00pm
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
